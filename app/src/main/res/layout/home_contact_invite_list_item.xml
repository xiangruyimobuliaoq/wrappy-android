<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp">

    <ImageView
        android:id="@+id/contact_list_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginVertical="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="54dp"
        android:src="@drawable/avatar"/>

    <TextView
        android:id="@+id/contact_list_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_list_avatar"
        android:layout_centerVertical="true"
        android:textSize="18dp"
        android:text="User_Id/Nickname"/>

    <ImageButton
        android:id="@+id/contact_list_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_cancel"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/contact_list_accept"
        />

    <ImageButton
        android:id="@+id/contact_list_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_accept"/>

    <View
        android:id="@+id/end_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/regSmsVerAuthBackgroundBorder"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/contact_list_avatar"/>

    <View
        android:id="@+id/end_border_full"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/regSmsVerAuthBackgroundBorder"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>