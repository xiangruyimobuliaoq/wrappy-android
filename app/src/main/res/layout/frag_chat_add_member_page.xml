<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.SearchView
        android:id="@+id/chat_add_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/searchViewBackground"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:iconifiedByDefault="false"
        app:queryBackground="@color/transparent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_add_contact_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/chat_add_adding_list"
        app:layout_constraintTop_toBottomOf="@+id/chat_add_search">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_add_adding_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/white">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>