<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_chat_list_imageview_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/avatar"/>

    <ImageView
        android:id="@+id/home_chat_list_imageview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/home_chat_list_imageview_avatar"
        android:layout_alignBottom="@id/home_chat_list_imageview_avatar"
        android:src="@drawable/status_disable"/>

    <TextView
        android:id="@+id/home_chat_list_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/home_chat_list_imageview_avatar"
        android:text="name"/>

    <TextView
        android:id="@+id/home_chat_list_textview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/home_chat_list_imageview_avatar"
        android:layout_below="@id/home_chat_list_textview_name"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/regSmsVerAuthBackgroundBorder"
        android:paddingEnd="-8dp"
        android:layout_toRightOf="@id/home_chat_list_imageview_avatar"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>